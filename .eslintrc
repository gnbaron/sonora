{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "globals": {
    "Promise": false,
    "SystextilDDP": false,
    "jasmine": false
  },
  "rules": {
    "quotes": [2, "single", "avoid-escape"],
    "no-underscore-dangle": [0, {"allow": [] }],
    "curly": 2,
    "no-multi-spaces": 2,
    "key-spacing": 2,
    "no-return-assign": 2,
    "consistent-return": 2,
    "no-shadow": 2,
    "comma-dangle": 2,
    "no-empty": 2,
    "new-parens": 2,
    "no-cond-assign": 2,
    "no-fallthrough": 2,
    "new-cap": 0,
    "no-loop-func": 2,
    "no-unreachable": 2,
    "no-labels": 2,
    "no-process-exit": 2,
    "camelcase": 0,
    "no-unused-vars": 1,
    "no-console": 1,

    /*React rules*/
    "react/prop-types": 0,
    "react/display-name": 0,
    "react/no-danger": 0
  },
  "env": {
    "node": true,
    "browser": true,
    "jest": true
  }
}
